    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "S01 json files",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": [
                "--files",
                "sample-data/s01.json",
                "--recurse"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "all json files",
            "type": "python",
            "request": "launch",
            "program": "main.py",
            "args": [
                "--files",
                "sample-data/*.json",
                "--recurse"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}